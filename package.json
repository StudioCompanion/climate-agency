  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@studiocompanion/scripts": "^1.2.2",
    "@types/node": "^17.0.40",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "typescript": "^4.7.3"
  },
  "packageManager": "yarn@3.2.1"
