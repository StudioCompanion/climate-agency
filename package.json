  "author": "Companion Studio Ltd",
  "license": "none",
  "private": true,
  "browserslist": [
    "last 2 versions",
    "not dead"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build && next export",
